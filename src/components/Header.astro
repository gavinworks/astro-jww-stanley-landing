---
import { Image } from 'astro:assets'
import logo from '../assets/images/logo.png'
import HeaderBullet from './HeaderBullet.astro'
---

<header class="flex flex-col bg-[url('/bg-header.jpeg')] bg-cover px-8 max-md:px-4">
	<div class="flex h-24 items-center justify-between">
		<Image
			src={logo}
			alt="JWW Logo"
			class="h-20 w-auto rounded-xl"
		/>
		<a
			href="#valuation"
			type="button"
			class="rounded-lg bg-blue-700 px-5 py-3 text-center text-base font-medium text-white transition-all duration-150 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
			Free Valuation
		</a>
	</div>
	<div class="mx-auto flex w-full max-w-7xl flex-col items-start gap-y-6 px-8 py-36 max-md:px-4">
		<p class="font-bold uppercase text-white">#1 Property Agents in Stanley</p>
		<div class="max-w-2xl rounded-xl bg-white bg-opacity-75 px-4 py-6">
			<h2 class="text-6xl font-bold leading-normal">Sell Your Property With JWW Stanley</h2>
		</div>
		<ul>
			<HeaderBullet text="Experienced Professionals" />
			<HeaderBullet text="No Obligation" />
			<HeaderBullet text="Comprehensive Assessment" />
		</ul>
		<a
			href="#valuation"
			type="button"
			class="inline-block rounded-lg bg-dark-teal px-5 py-3 text-center text-base font-medium uppercase text-white transition-all duration-150 hover:bg-teal-800 focus:outline-none focus:ring-4 focus:ring-blue-300">
			Get My Free Valuation
		</a>
	</div>
</header>
