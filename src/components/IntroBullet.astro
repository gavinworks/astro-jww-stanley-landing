---
export interface Props {
	icon: string
	title: string
	text: string
}

const { icon, title, text } = Astro.props
---

<div class="flex flex-row justify-between gap-4 max-md:flex-col">
	<div class="flex w-24 flex-col items-center max-md:items-start">
		<img
			src={icon}
			alt=""
			class="w-12 pt-2"
		/>
	</div>
	<div class="flex w-full flex-col gap-y-4">
		<h3 class="text-2xl text-light-blue">{title}</h3>
		<p class="text-lg text-gray-600">{text}</p>
	</div>
</div>
