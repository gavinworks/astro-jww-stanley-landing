---
export interface Props {
	step: number
	heading: string
	content: string
}

const { step, heading, content } = Astro.props
---

<article class="flex w-full flex-col gap-2">
	<div class="flex h-12 w-12 flex-col items-center justify-center rounded-full bg-[#4C4F59] text-center"><span class="block text-light-teal">{step}</span></div>
	<h4 class="mb-3 text-2xl font-bold text-white">{heading}</h4>
	<p class="text-gray-400">{content}</p>
</article>
